{
  "scripts": {
    "test:ws": "jest --silent -- ws.integration.tests.spec",
    "test:rest": "jest --silent -- rest.integration.tests.spec"
  },
  "dependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/platform-express": "^10.4.2",
    "@nestjs/platform-ws": "^10.4.3",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ethers": "^6.13.2",
    "jest": "^29.7.0",
    "moment": "^2.30.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^5.3.3",
    "uuid-parse": "^1.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 30000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/integration_tests"
    ]
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.1",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.7",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.12",
    "class-transformer": "^0.5.1",
    "supertest": "^7.0.0",
    "ws": "^8.18.0"
  }
}
